<body>

  <div class="card">
    <h1>Kalkulator Minggu Kehamilan</h1>
    <div class="subtitle">Berdasarkan tarikh LMP (hari pertama haid terakhir)</div>

    <label for="lmpDate">Tarikh LMP</label>
    <input type="date" id="lmpDate">

    <button onclick="kiraMinggu()">Kira Minggu Kehamilan</button>

    <div id="error" class="error"></div>
    <div id="result" class="result" style="display:none;"></div>

    <div class="small">
      *Ini hanyalah anggaran umum. Untuk pengesahan umur kehamilan dan EDD,
      sila rujuk doktor / fasiliti kesihatan.
    </div>
  </div>

  <script>
    function formatTarikh(date) {
      const d = date.getDate().toString().padStart(2, '0');
      const m = (date.getMonth() + 1).toString().padStart(2, '0');
      const y = date.getFullYear();
      return d + "/" + m + "/" + y;
    }

    function kiraMinggu() {
      const lmpInput = document.getElementById('lmpDate').value;
      const errorEl = document.getElementById('error');
      const resultEl = document.getElementById('result');

      errorEl.textContent = "";
      resultEl.style.display = "none";
      resultEl.innerHTML = "";

      if (!lmpInput) {
        errorEl.textContent = "Sila pilih tarikh LMP terlebih dahulu.";
        return;
      }

      const lmp = new Date(lmpInput);
      // Pastikan masa set ke tengah hari untuk elak isu time zone pelik
      lmp.setHours(12, 0, 0, 0);

      const today = new Date();
      today.setHours(12, 0, 0, 0);

      const MS_PER_DAY = 24 * 60 * 60 * 1000;
      const diffMs = today - lmp;
      const diffDays = Math.floor(diffMs / MS_PER_DAY);

      if (diffDays < 0) {
        errorEl.textContent = "Tarikh LMP berada pada masa hadapan. Sila semak semula.";
        return;
      }

      const weeks = Math.floor(diffDays / 7);
      const days = diffDays % 7;

      // Anggaran EDD = LMP + 280 hari (40 minggu)
      const eddMs = lmp.getTime() + (280 * MS_PER_DAY);
      const edd = new Date(eddMs);

      const todayStr = formatTarikh(today);
      const lmpStr = formatTarikh(lmp);
      const eddStr = formatTarikh(edd);

      let umurText = weeks + " minggu";
      if (days > 0) {
        umurText += " " + days + " hari";
      }

      resultEl.innerHTML = `
        <div class="result-title">Keputusan</div>
        <div><strong>Tarikh hari ini:</strong> ${todayStr}</div>
        <div><strong>Tarikh LMP:</strong> ${lmpStr}</div>
        <div><strong>Anggaran umur kehamilan:</strong> ${umurText}</div>
        <div><strong>Anggaran tarikh jangka bersalin (EDD):</strong> ${eddStr}</div>
      `;
      resultEl.style.display = "block";
    }
  </script>

</body>
